@model IEnumerable<NotFilmweb.Models.Resource>

@{
    ViewData["Title"] = "Zasoby";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Przeglądaj Zasoby</h1>

    <div class="btn-group">
        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="btn btn-outline-secondary">Sortuj: Tytuł</a>
        <a asp-action="Index" asp-route-sortOrder="@ViewData["RatingSortParm"]" class="btn btn-outline-secondary">Sortuj: Ocena</a>
    </div>
<p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">+ Dodaj nowy</a>
        }
</p>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-transparent border-0 mt-2">
                    <span class="badge bg-primary">@item.Category?.Name</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text text-truncate">@item.Description</p>
                </div>
                <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center">
                    <div>
                        @if (item.AverageRating > 0)
                        {
                            <h4 class="mb-0 text-warning">★ @item.AverageRating</h4>
                            <small class="text-muted">(@item.Reviews?.Count głosów)</small>
                        }
                        else
                        {
                            <small class="text-muted">Brak ocen</small>
                        }
                    </div>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Zobacz więcej</a>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <div class="card-footer">
                        <small>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Usuń</a>
                        </small>
                    </div>
                }
            </div>
        </div>
    }
</div>