@model NotFilmweb.Models.Category

@{
    ViewData["Title"] = Model.Name;
}

<div class="mb-4 d-flex justify-content-between align-items-start">
    <div>
        <h1 class="fw-bold">@Model.Name</h1>
        <p class="text-muted">
            Lista filmów w kategorii <strong>@Model.Name</strong>
        </p>

        <a asp-action="Index" class="btn btn-link ps-0">
            &larr; Wróć do kategorii
        </a>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Resources"
           asp-action="Create"
           asp-route-categoryId="@Model.Id"
           class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Dodaj film
        </a>
    }
</div>


    @if (Model.Resources != null && Model.Resources.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var movie in Model.Resources)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-muted">
                                @Model.Name
                            </p>
                        </div>

                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <div>
                                @if (movie.AverageRating > 0)
                                {
                                    <span class="text-warning fw-bold">
                                        ★ @movie.AverageRating
                                    </span>
                                }
                                else
                                {
                                    <small class="text-muted">Brak ocen</small>
                                }
                            </div>

                            <a asp-controller="Resources"
                               asp-action="Details"
                               asp-route-id="@movie.Id"
                               class="btn btn-sm btn-outline-primary">
                                Zobacz film
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Brak filmów w tej kategorii.
        </div>
    }
</div>
